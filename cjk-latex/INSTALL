#!/bin/sh
# $NetBSD: INSTALL,v 1.3 2006/02/27 18:08:47 rxg Exp $

PKGNAME=$1
STAGE=$2

TEXMFCNF=@TEXMFDIRS@/web2c/texmf.cnf

case ${STAGE} in
PRE-INSTALL)
	;;
POST-INSTALL)
	echo "Edit ${TEXMFCNF}"
	echo "% ttf2pk data directory"              >> ${TEXMFCNF}
	echo "TTF2PKINPUTS = \$TEXMF/ttf2tfm/base"  >> ${TEXMFCNF}
	echo "% ttf2tfm data directory"             >> ${TEXMFCNF}
	echo "TTF2TFMINPUTS = \$TEXMF/ttf2tfm/base" >> ${TEXMFCNF}
	;;
*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
