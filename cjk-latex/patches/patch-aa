--- Makefile.orig	Wed Dec 12 20:01:20 2001
+++ Makefile
@@ -0,0 +1,27 @@
+#
+# Makefile for CJK to apply on Unix systems more smoothly.
+#
+
+LATEX_DIR = $(TEXMFDIRS)/tex/latex
+CJK_DIR = $(LATEX_DIR)/CJK
+
+all:
+	(cd utils; $(MAKE) all)
+
+install: install-texinput install-doc install-examples
+	(cd utils; $(MAKE) install)
+
+install-texinput:
+	$(BSD_INSTALL_DATA_DIR) $(CJK_DIR)
+	cp -Rf texinput/* $(CJK_DIR)
+
+install-doc:
+	$(BSD_INSTALL_DATA_DIR)  $(PREFIX)/share/doc/cjk-latex
+	cp -Rf doc/* $(PREFIX)/share/doc/cjk-latex
+
+install-examples:
+	$(BSD_INSTALL_DATA_DIR) $(PREFIX)/share/examples/cjk-latex
+	cp -Rf examples/* $(PREFIX)/share/examples/cjk-latex
+
+clean:
+	(cd utils; $(MAKE) clean)
