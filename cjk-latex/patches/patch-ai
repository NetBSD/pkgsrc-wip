@@ -0,0 +1,15 @@
+extconv:
+	$(CC) $(CFLAGS) -o $@ extconv.c
+
+build: extconv
+
+all: build
+
+install: all
+	$(BSD_INSTALL_PROGRAM) extconv $(PREFIX)/bin
+	$(BSD_INSTALL_MAN) extconv.1 $(PREFIX)/man/man1
+	$(BSD_INSTALL_SCRIPT) bg5+latex $(PREFIX)/bin
+	$(BSD_INSTALL_SCRIPT) gbklatex $(PREFIX)/bin
+
+clean:
+	rm -f extconv
