+pinyin:
+	$(CC) $(CFLAGS) -o $@ pinyin.c
+
+build: pinyin
+
+all: build
+
+install: all
+	$(BSD_INSTALL_PROGRAM) pinyin $(PREFIX)/bin
+	$(BSD_INSTALL_DATA) pinyin.ldf $(TEXMFMAIN)/tex/generic/babel
+	$(BSD_INSTALL_DATA) pyhyph.tex $(TEXMFMAIN)/tex/generic/hyphen
+
+clean:
+	rm -f pinyin
