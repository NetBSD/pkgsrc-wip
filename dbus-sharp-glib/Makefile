DISTNAME=	dbus-sharp-glib-0.5.1
CATEGORIES=	sysutils
# The DISTFILE to download is generated by a 301 redirect.
# The getsite.sh script uses cURL to follow the redirects over TLS/SSL.

MAINTAINER=	pkgsrc-users@NetBSD.org
HOMEPAGE=	https://github.com/mono/dbus-sharp-glib
COMMENT=	Fork of ndesk-dbus-glib
LICENSE=	2-clause-bsd # ?

USE_LANGUAGES=	# none
WRKSRC=		${WRKDIR}/mono-dbus-sharp-glib-f73a286
USE_TOOLS+=	aclocal autoconf autoheader automake curl gmake

PKGCONFIG_OVERRIDE+=	dbus-sharp-glib-1.0.pc.in

pre-configure:
	cd ${WRKSRC} && ./autogen.sh --prefix=${PREFIX}

.include "../../wip/dbus-sharp/buildlink3.mk"
.include "../../mk/bsd.pkg.mk"
