 prefix = GetOption('prefix')
 env = Environment(options = opts)
 
+env['ENV']['PATH'] = os.environ.get('PATH')
+
 if env['RELEASE']:
   env.Append(CPPDEFINES=["PUBLIC_RELEASE"])
   env['DEBUG'] = 0
