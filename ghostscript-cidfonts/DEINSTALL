#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.1.1.1 2011/02/23 14:35:51 makoto Exp $

ADOBE_RESOURCEDIR="@ADOBE_RESOURCEDIR@"
GS_RESOURCEDIR="@GS_RESOURCEDIR@"
PKG_INFO="@PKG_INFO@"

case ${STAGE} in
DEINSTALL)
	${PKG_INFO} -qL adobe-cidfonts | ${GREP} "/Resource/CIDFont/" |
	while read src; do
		base=`${BASENAME} $src`
		dest="${GS_RESOURCEDIR}/CIDFont/$base"
		${RM} -f $dest
	done
	;;
esac
