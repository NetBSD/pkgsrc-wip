# $NetBSD: INSTALL,v 1.2 2011/06/18 13:48:20 obache Exp $

case ${STAGE} in
POST-INSTALL)
	for f in `cd ${PREFIX}/share/wnn/ja_JP/dic && find . -type f`;
	 do
	   d=@WNNDICTDIR@/ja_JP/`${DIRNAME} ${f}`;
	   ${MKDIR} ${d};
	   ${CP} ${PREFIX}/share/wnn/ja_JP/dic/${f} ${d};
	 done
	for i in `${FIND} @WNNDICTDIR@/ja_JP -type f \( -name \*dic -o -name  \*fzk \)`; 
	 do
	   ${CHMOD} +w ${i};
	   ${PREFIX}/bin/wnntouch ${i};
	 done;
	;;
esac
