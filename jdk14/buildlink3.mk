BUILDLINK_PASSTHRU_DIRS+=	${BUILDLINK_JAVA_PREFIX.jdk14}

BUILDLINK_CPPFLAGS.jdk14= \
	-I${BUILDLINK_JAVA_PREFIX.jdk14}/include				\
	-I${BUILDLINK_JAVA_PREFIX.jdk14}/include/netbsd
