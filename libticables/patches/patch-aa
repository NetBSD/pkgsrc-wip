+#ifdef __NetBSD__
+static __inline u_char
+inb(u_int port)
+{
+        u_char  data;
+        __asm __volatile("inb %%dx,%0" : "=a" (data) : "d" (port));
+        return (data);
+}
+
+static __inline void
+outb(u_int port, u_char data)
+{
+        u_char  al;
+        al = data;
+        __asm __volatile("outb %0,%%dx" : : "a" (al), "d" (port));
+}
+#endif
