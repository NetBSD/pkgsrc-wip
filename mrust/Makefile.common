post-patch:
	if [ -e ${WRKSRC} ]; then (cd ${WRKSRC};			\
	    ${MV} rust-version rust-version.dist;			\
	    ${ECHO} ${RUSTVER} > rust-version;				\
	    ${TOUCH} -t 200101010101 rust-version); fi


