GITHUB_PROJECT=	mrustc
GITHUB_TAG=	998dc164309d7d707e5c1c38dd61c0b95169cbcf
DISTNAME=	998dc164309d7d707e5c1c38dd61c0b95169cbcf
SNAPSTAMP=	20220814a
PKGNAME=	mrust-${SNAPSTAMP}
CATEGORIES=	lang
MASTER_SITES=	${MASTER_SITE_GITHUB:=thepowersgang/}
