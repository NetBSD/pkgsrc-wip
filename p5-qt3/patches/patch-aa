+# ../../lang/perl5/module.mk overrides OTHERLDFLAGS
+sub MY::dynamic_lib {
+		  package MY;
+                   my $i = shift->SUPER::dynamic_lib(@_);
+                   $i =~ s#(\$\(OTHERLDFLAGS\))#$1 $OTHERLDFLAGS#s;
+                   $i;
+}
