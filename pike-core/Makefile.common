.endfor

.for m in ${MODULE_NAMES}
CONFIGURE_ARGS+=	--with-${m:Q}
.endfor

pre-configure:
	${MKDIR} -p ${WRKSRC} &&           \
	cd ${WRKSRC}/src &&               \
	if ! test -f autoconfig.done; then \
		./run_autoconfig . ./src ${MODULE_DIRS} && \
		${TOUCH} autoconfig.done;  \
	fi
