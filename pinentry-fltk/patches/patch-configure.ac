+   AC_MSG_CHECKING([for FLTK 1.4])
    FLTK_VERSION=`${FLTK_CONFIG} --api-version`
-   if test ${FLTK_VERSION} != "1.3" ; then
+   if test ${FLTK_VERSION} != "1.4" ; then
        AC_MSG_RESULT([no])
