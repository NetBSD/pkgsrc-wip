+#if (!defined _GNU_SOURCE && !defined _ISOC99_SOURCE && !defined _ISOC9X_SOURCE && !(defined __STDC_VERSION__ && __STDC_VERSION__ >= 199901L)) 
+double round(double x) {
+       double t;
+       if (x >= 0.0) {
+               t = ceil(x); 
+               if (t - x > 0.5) t -= 1.0;
+               return t;
+       } else {
+               t = ceil(-x);
+               if (t + x > 0.5) t -= 1.0;
+               return -t;
+       } 
+}
+#endif
 
