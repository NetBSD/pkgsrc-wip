#!/bin/sh
# $NetBSD: DEINSTALL,v 1.1.1.1 2003/09/02 06:06:26 xtraeme Exp $

PKGNAME=$1
STAGE=$2
LIST="${PKG_PREFIX}/share/tetrinetx/game.log"

case ${STAGE} in
	DEINSTALL)
		for to_trash in ${LIST}; do
			if [ -e "${to_trash}" ]; then
				if [ -d "${to_trash}" ]; then
					rm -rf ${to_trash}/*
				elif [ -f "${to_trash}" ]; then
					rm ${to_trash}
				fi
			fi
		done
		;;

	POST-DEINSTALL)
		;;

	*)
		echo "Unexpected argument: ${STAGE}"
		exit 1
		;;
esac
exit 0
