Add destdir support.

--- Makefile.orig	2008-05-27 20:05:24.000000000 +0000
+++ Makefile
@@ -1,7 +1,6 @@
-prefix=/usr
-bindir = ${prefix}/bin
-mandir = ${prefix}/share/man
-INSTALL = /bin/install
+bindir = ${DESTDIR}${PREFIX}/bin
+mandir = ${DESTDIR}${PREFIX}/man
+INSTALL = install
 INSTALLPROG = ${INSTALL} -m 0755
 INSTALLMAN = ${INSTALL} -m 0644
 
