#!/bin/sh
#
# $NetBSD: INSTALL,v 1.1.1.1 2003/10/13 14:10:25 adrian_p Exp $

case ${STAGE} in
POST-INSTALL)
	${ECHO} "Populating unrealircd home directory: @IRCD_HOME@"
	if [ ! -d @IRCD_HOME@ ]; then
		${MKDIR} @IRCD_HOME@
		${CHMOD} 755 @IRCD_HOME@
	fi
	cd @IRCD_SHARE@
	@PAX@ -rw . @IRCD_HOME@
	${CHOWN} -R @IRCD_USER@:@IRCD_GROUP@ @IRCD_HOME@
	;;
esac
