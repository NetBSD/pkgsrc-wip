+$$(NetBSDGeneratedKernelHeadersX86_0_OUTDIR)/busdefs.h: /usr/src/sys/arch/x86/include/busdefs.h | $$(dir $$@)
+	$(QUIET)$(CP) -f $< $(@D)/busdefs.h
