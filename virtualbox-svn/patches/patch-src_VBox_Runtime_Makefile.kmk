+$$(NetBSDGeneratedKernelHeadersX86_0_OUTDIR)/bus_funcs.h: /usr/src/sys/arch/x86/include/bus_funcs.h | $$(dir $$@)
+	$(QUIET)$(CP) -f $< $(@D)/bus_funcs.h
