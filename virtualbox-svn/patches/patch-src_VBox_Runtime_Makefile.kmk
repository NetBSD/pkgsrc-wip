+$$(NetBSDGeneratedKernelHeadersX86_0_OUTDIR)/cpufunc.h: /usr/src/sys/arch/x86/include/cpufunc.h | $$(dir $$@)
+	$(QUIET)$(CP) -f $< $(@D)/cpufunc.h
